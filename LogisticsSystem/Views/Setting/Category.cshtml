@model Logistic.Base.Entity.CM_Categories
@{
    ViewBag.Title = "Category";
    Layout = "~/Views/Shared/Blank.cshtml";
}
<script src="~/js/jquery-1.11.3.min.js"></script>
<div id="myModal">
    <div class="modal-header">
        <h3 id="myModalLabel">Add Category</h3>
    </div>
    <div class="modal-body">
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()
            <div class="form-group">
                <div>
                    <label>Code</label>
                    @Html.TextBoxFor(m => m.CODE, new { @class = "form-control", id = "Code" })
                </div>
                <div>
                    <label>Category Name</label>
                    @Html.TextBoxFor(m => m.Name, new { @class = "form-control", id = "Name" })
                </div>

            </div>
                  
            <div class="form-group">
                <input type="submit" value="Submit" id="btnSubmit" class="btn btn-primary" />
            </div>
        }
    </div>
    <script>
        $(document).ready(function () {
            $('#btnSubmit').click(function (e) {
                validateForm(e);
            });

            function validateForm(e) {
                var Name = $('#Code').val();
                var Code = $('#Name').val();
                //var ShortDescription = $('#ShortDescription').val();


                var inputVal = new Array(Name,Code);

                var inputMessage = new Array("Category Code", "Category Name");

                $('.error').hide();

                if (inputVal[0] == "") {
                    e.preventDefault()
                    $('#Code').after('<span style="color:red" class="error"> Please enter your ' + inputMessage[0] + '</span>');
                    return false;
                }
                if (inputVal[1] == "") {
                    e.preventDefault()
                    $('#Name').after('<span style="color:red" class="error"> Please enter your ' + inputMessage[1] + '</span>');
                    return false;
                }
                    //if (inputVal[2] == "") {
                    //    e.preventDefault()
                    //    $('#ShortDescription').after('<span style="color:red" class="error"> Please enter your ' + inputMessage[2] + '</span>');
                    //    return false;
                    //}
                else {
                    return true;
                }
            }

        });
    </script>
</div>
