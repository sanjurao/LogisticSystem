<link rel="shortcut icon" href="favicon.ico" />
<body class="Login">

    @using (Html.BeginForm("ForgotPassword", "Account", FormMethod.Post, new { role = "form" }))
    {
        @Html.AntiForgeryToken()
        <div class="content">
            <h3>Forget Password ?</h3>
            <p>
                Enter your e-mail address below to reset your password.
            </p>
            @Html.ValidationSummary("", new { @class = "text-danger" })
            <div class="form-group">
                @Html.TextBoxFor(m => m.Email, new { @class = "form-control placeholder-no-fix" })
                @*<input class="form-control placeholder-no-fix" type="text" autocomplete="off" placeholder="Email" name="email" />*@
            </div>
            <div class="form-actions">
                @* <button type="button" id="back-btn" class="btn btn-default">Back</button>*@
                @Html.ActionLink("Back", "Login", "Account", null, new { @class = "btn btn-default" })
                <button type="submit" class="btn btn-success uppercase pull-right">Submit</button>

            </div>
        </div>
    }

</body>
