@model IEnumerable<Logistic.Base.Entity.UM_User>
@{
    ViewBag.Title = "GetUser";
    Layout = "~/Views/Shared/_MasterLayout.cshtml";
}

<h2>GetUser</h2>
<body class="page-header-fixed page-quick-sidebar-over-content ">
    <div class="page-content-wrapper" style="min-height: 706px; margin-top: 60px;">
        <div class="page-content">
            @using (Html.BeginForm("GetUser", "UserManagement", FormMethod.Post))
            {
                <div class="col-md-15">
                    <!-- BEGIN SAMPLE TABLE PORTLET-->
                    <div class="portlet box blue">
                        <div class="portlet-title">
                            <div class="caption">
                                <i class="fa fa-comments"></i>Manage Users
                            </div>
                            <div class="tools">
                                <a href="javascript:;" class="collapse" data-original-title="" title=""></a>
                                <a href="#portlet-config" data-toggle="modal" class="config" data-original-title="" title=""></a>
                                <a href="javascript:;" class="reload" data-original-title="" title=""></a>
                            </div>
                        </div>
                        <div class="portlet-body">
                            <div class="btn-group">
                                @Html.ActionLink("Add New", "CreateUser", "UserManagement", null, new {@class="btn btn-circle btn-sm green-haze"})
                            </div>
                            <div class="table-scrollable">
                                <table class="table table-bordered table-hover">
                                    <thead>
                                        <tr>
                                            <th>Id
                                            </th>
                                            <th>First Name
                                            </th>
                                            <th>Email ID
                                            </th>
                                            <th>User Type
                                            </th>
                                            <th>IsActive
                                            </th>
                                            <th>Edit
                                            </th>
                                            <th>Delete
                                            </th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var items in Model)
                                        {
                                            <tr class="success">
                                                <td>@items.Id</td>
                                                <td>@items.FirstName
                                                </td>
                                                <td>@items.Email
                                                </td>
                                                <td>@items.UserType
                                                </td>
                                                <td>@items.IsActive
                                                </td>
                                                <td>
                                                    @Html.ActionLink("Approve/DisApprove", "GetUser", "UserManagement", new { Id = @items.Id, E = "A" }, new { @class = "btn green icon-wrench" })
                                                </td>
                                                <td>
                                                    @Html.ActionLink("Delete", "GetUser", "UserManagement", new { Id = @items.Id, D = "R" }, new { @class = "btn red icon-trash" })
                                                </td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</body>
